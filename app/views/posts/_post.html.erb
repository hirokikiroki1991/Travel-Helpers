<div class="chat-box">
 
  <div class="chat-face">
    <p><%= attachment_image_tag post.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" ,:size => "40x40" %></p>
    <p>@<%= post.user.name %></p>
    <p><%= post.created_at.strftime('%Y/%m/%d') %></p>
  </div>
  
  <div class="chat-area">
    <div class="chat-hukidashi">
      <p class="result"><%=link_to post.content, post_path(post.id) %></p>
    </div>
  </div>

</div>
