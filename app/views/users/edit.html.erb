

<!-- 英語ページ -->
<div id="one" class="none active">

<%= form_for(@user) do |f| %>
  <div class="form-group has-icon">
    <label class="control-label sr-only" for="inputEmail">Name</label>
     <span class="fa fa-user form-control-icon" aria-hidden="true"></span>Name
    <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
    <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    <label class="control-label sr-only" for="inputEmail">Name</label>Introduction
    <%= f.text_area :introduction, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"introduction"%>
  </div>

  <div class="form-group has-icon">
    <div class="user-edit-image">
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
    </div>
    <label class="control-label sr-only" for="inputEmail">ProfileImage
    </label>
    <label for = "guide_post_image">Click below button to uploard image
    <%= f.attachment_field :profile_image, placeholder: "Profile Image", class: "user-edit-form" %></label>
  </div>
  <%= f.submit "Submit", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>

</div>







