
<div class="row">
  <aside class="col-md-4">
    <div class="container-mypage">
      <table class="mypage-table">
        <div class="mypage-box">
          <div class="mypage-name">
            <tr><th class="mypage-th"><h1>
            <%= @user.name %></h1></th></tr>
          </div>
          <tr><td class="mypage-td"><%= @user.Nationality %></td></tr>
          <tr><td class="mypage-td"><%= @user.gender %></td></tr>
          <tr><td class="mypage-td"><%= @user.introduction %></td></tr>
          <tr><td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" ,:size => "40x40" %><tr><td>
          <tr><td><%= render 'follow_form' if signed_in? %></td></tr>
          <tr><td><%= render 'stats' %></td></tr>
          <tr><td><% if @user.id == current_user.id %>
       <% else %>
         <% if @isRoom == true %>
          <p><a href="/rooms/<%= @roomId %>">チャットへ</a>
       <% else %>
          <%= form_for @room do |f| %>
          <%= fields_for @entry do |e| %>
          <%= e.hidden_field :user_id, :value=> @user.id %>
          <% end %>
          <%= f.submit "チャットを始める" %>
          <% end %>
          <% end %>
          <% end %>
          <%= link_to "ユーザー一覧に戻る", users_path %></tr></td>
       </div>
      </table>
  </div>

  

  </aside>
  <div class="col-md-8">


<div class="tab_wrap">
  <input id="tab1" type="radio" name="tab_btn" checked>
  <input id="tab2" type="radio" name="tab_btn">
  <input id="tab3" type="radio" name="tab_btn">
 
  <div class="tab_area">
    <label class="tab1_label" for="tab1">Travel Plans</label>
    <label class="tab2_label" for="tab2">Tweets</label>
    <label class="tab3_label" for="tab3">tab3</label>
  </div>

  <div class="panel_area">
    <div id="panel1" class="tab_panel">
      <p><%= render @guideposts %></p>
    </div>
    

<% if @user.posts.any? %>
    <div id="panel2" class="tab_panel">
      <p><%= render @posts %></p>
    </div>
<% end %>
    <div id="panel3" class="tab_panel">
      <p>panel3</p>
    </div>
  </div>
</div>








    <% if @user.guide_posts.any? %>
      <h3>Travel plan (<%= @user.guide_posts.count %>)</h3>
      <ol class="posts">
        <%= render @guideposts %>
      </ol>
    <% end %>



    <% if @user.posts.any? %>
      <h3>Tweets (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
    <% end %>

  </div>



