<div class="box30">
    <div class="box-title"><%= @guidepost.title %></div>
    <p><%= @guidepost.body %></p>
</div>

<div class="post-content">
        <ul class="meta-info-cells v4 float-wrapper">
        <li>
        <i class="fa fa-user"></i>By<%= link_to @guidepost.user.name, user_path %></a>
        </li>
        <li>
          <i class="fa fa-calendar"></i><%= @guidepost.created_at.strftime('%Y/%m/%d') %>
        </li>

        <% if @guidepost.favorited_by?(current_user) %>
  <li>
    <%= link_to guide_post_favorites_path(@guidepost), method: :delete do %>
      <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
      <%= @guidepost.favorites.count %> いいね
    <% end %>
  </li>
<% else %>
  <li>
    <%= link_to guide_post_favorites_path(@guidepost), method: :post do %>
      <i class="fa fa-heart-o" aria-hidden="true"></i>
      <%= @guidepost.favorites.count %> いいね
    <% end %>
  </li>
<% end %>
<li>
  <% if @guidepost.user == current_user %>
  <%= link_to "削除", guide_post_path(@guidepost), method: :delete %>
<% end %>
</li>
        </ul>
        